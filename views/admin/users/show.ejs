<div class="row">
	<div class="col-md-8">
		<h1><%= user.email %></h1>
		<% if(user.name) { %>
			<h2>&ldquo;<%= user.name %>&rdquo;</h2>
		<% } %>
		<p>Registered: <%= when(user.createdAt) %></p>
	</div>
	<div class="col">
		<form method="post" action="/admin/users/<%= user.id %>/delete" onsubmit="return confirm('Really delete this user?');">
			<%- csrfToken() %>
			<button class="btn btn-sm small btn-danger">Delete</button>
		</form>
	</div>
</div>