<%
_locals.title = "Log in";
_locals.bodyClass = "bg-light";
%>

<div class="row justify-content-center">
	<div class="col-md-5 rounded border bg-white p-4 mt-5">
		<form method="post">
			<h1>Log in</h1>

			<% if(locals.errors) { %>
				<div class="alert alert-danger mb-4" data-state="warning">
					<p>Please check your email address and password.</p>
				</div>
			<% } %>

			<div class="form-floating mb-3">
				<input type="text" name="email" id="email" class="form-control floating" value="<%- postedValues['email'] %>" />
				<label for="email">Email</label>
			</div>

			<div class="form-floating mb-3">
				<input type="password" name="password" id="password" class="form-control floating" />
				<label for="email">Email</label>
			</div>

			<button class="btn btn-primary btn-lg w-100">Log in</button>
		</form>
	</div>
</div>

