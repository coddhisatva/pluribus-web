<%
_locals.title = "Password Assistance";
%>

<div class="row justify-content-center mt-4">
	<div class="col col-md-6">
		<div class="rounded border p-5 mt-5 bg-white">
			<h1 class="mb-4">Reset password</h1>
			<form method="post">
				<div class="form-floating mb-3">
					<input class="form-control" name="email" type="text" placeholder="Your email" />
					<label class="form-label" for="email">Your email</label>
				</div>


				<button class="btn btn-primary btn-lg w-100">Reset password</button>

			</form>
		</div>
	</div>
</div>