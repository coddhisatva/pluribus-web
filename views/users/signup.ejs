<% 
_locals.title = 'Sign Up';
_locals.noNav = true;
%>

<h1 class="visually-hidden">Get started with Pluribus.</h1>
<div class="wrapper-half main-content" role="main">
			
	<form class="form-credentials card"  method="post">
		<fieldset class="card-body">
			<legend>Get started with Pluribus.</legend>

		<div class="flow">
					<input class="form-control" type="text" name="email" placeholder="name@example.com" value="<%= postedValues.email %>" />

					<label class="form-label" for="email">Your email</label>
					<%- validationMessage('email') %>
				</div>
				<div>
					<div class="form-check">
						<input class="form-check-input" type="checkbox" value="yes" id="agree" name="agree" <%- postedValues.agree ? 'checked' : '' %>>
						<label class="form-check-label" for="agree">I agree to the terms and conditions</label>
					</div>
					<%- validationMessage('agree') %>
				</div>

				<div>
					<button class="btn btn-primary w-100 py-3">Create your free account</button>
				</div>

				<p>
					Already have an account? <a href="/users/login">Log in</a>.
				</p>
			</form>

</div>

