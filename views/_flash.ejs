<%
var alert = flash.alert;
var notice = flash.notice;
%>

<% if(alert) { %>
	  <div class="flash alert alert-warning alert-dismissible fade show mb-3" role="alert">
		<%= alert %>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	  </div>
<% } %>

<% if(notice) { %>
	<div class="flash alert alert-info alert-dismissible fade show mb-3" role="alert">
	  <%= notice %>
	  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
<% } %>
